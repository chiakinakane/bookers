

<h1>Books</h1>

<table>
　<thead>

  <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
  </tr>



 
<% @books.each do |book| %>
  <tr>
  <td>
    <span><%= book.title %></span>
  </td>
  
  <td>
    <span><%= book.body %></span>
　</td>
　
  <td>
  <%= link_to "show", book_path(book.id) %>
  </td>
  <td>
  <%= link_to "edit", edit_book_path(book.id) %>
  </td>
  <td>
  <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "delete?" %>
  </td>
  </tr>

<% end %>

   </tbody>
</table>

<h2>New Book</h2>


<%= form_with model: @book do |f| %>


<h4>title</h4>
 <%= f.text_field :title %>
 
 <h4>body</h4>
 <%= f.text_area :body %>
 
 <%= f.submit 'Create Book' %>
 
<% end %>

